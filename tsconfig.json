{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "paths": {
            "@components/*": [
                "components/*"
            ],
            "@lib/*": [
                "lib/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@hooks/*": [
                "hooks/*"
            ],
            "@assets/*": [
                "assets/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "archive",
        "tests",
        "**/*.test.*",
        "**/__mocks__/**"
    ]
}